@model Destination
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rota Güncelleme Sayfası</h1>

<form method="post">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" class="form-control" asp-for="City" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Gün/Gece")
        <input type="text" class="form-control" asp-for="DayNight" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Ana Görsel")
        <input type="datextte" class="form-control" asp-for="Image" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" class="form-control" asp-for="Capacity" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Kapak Görseli")
        <input type="text" class="form-control" asp-for="ImageCover" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Görsel 2")
        <input type="text" class="form-control" asp-for="Image2" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Detay 1")
        <textarea cols="30" rows="5" class="form-control" asp-for="Details1">

        </textarea>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Detay 2")
        <textarea cols="30" rows="5" class="form-control" asp-for="Details2">

        </textarea>
    </div>
    <br />
    <button class="btn btn-primary">
        Güncelle
    </button>
</form>


