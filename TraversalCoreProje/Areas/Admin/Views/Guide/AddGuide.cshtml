@model Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Girişi</h1>

<form method="post" enctype="multipart/form-data">

    <div class="form-group">

        @Html.Label("Ad Soyad")

        <input type="text" class="form-control" asp-for="Name" />

        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <br />

    <div class="form-group">

        @Html.Label("Rehber Fotoğraf")

        <input type="file" class="form-control" asp-for="Image" />

        <span asp-validation-for="Image" class="text-danger"></span>

    </div>

    <br />

    <div class="form-group">

        @Html.Label("Instagram Url")

        <input type="text" class="form-control" asp-for="InstagramUrl" />

    </div>

    <br />

    <div class="form-group">

        @Html.Label("Twitter Url")

        <input type="text" class="form-control" asp-for="TwitterUrl" />

    </div>

    <br />

    <div class="form-group">

        @Html.Label("Açıklama")

        <textarea cols="30" rows="5" class="form-control" asp-for="Description">

        </textarea>

        <span asp-validation-for="Description" class="text-danger"></span>

    </div>

    <br />

    <button class="btn btn-primary">
        Oluştur
    </button>
</form>