@model MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Mail Gönderme Sayfası</h1>

<form method="post" enctype="multipart/form-data">

    <div class="form-group">

        @Html.Label("Alıcı Mail Adresi")

        <input type="text" class="form-control" asp-for="MailReceiver" />

    </div>

    <br />
    <div class="form-group">

        @Html.Label("Konu Başlığı")

        <input type="text" class="form-control" asp-for="Subject" />

    </div>
    <br />
    <div class="form-group">

        @Html.Label("Mesaj İçeriği")
        <textarea cols="30" rows="5" class="form-control" asp-for="Body">

        </textarea>
    </div>
    <br />
    <button class="btn btn-primary">
        Mail Gönder
    </button>

</form>

